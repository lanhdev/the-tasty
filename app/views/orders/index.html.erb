<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-striped table-bordered">
  <thead class="table-inverse">
    <tr>
      <th>Name</th>
      <th>Customer</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.food_item.name %></td>
        <td><%= order.name %></td>
        <td><%= order.phone_number %></td>
        <td><%= order.address %></td>
        <td><%= order.quantity %></td>
        <td><%= link_to 'Show', food_item_order_path(id: order.id) %></td>
        <td><%= link_to 'Destroy', food_item_order_path(id: order.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
