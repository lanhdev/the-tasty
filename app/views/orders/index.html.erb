<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Customer</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.food_item.name %></td>
        <td><%= order.name %></td>
        <td><%= order.phone_number %></td>
        <td><%= order.address %></td>
        <td><%= order.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
