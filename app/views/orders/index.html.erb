<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<h1><span style="color: #FFFFFF">Orders of <%= @item.name %></span></h1>

<table class="table table-inverse table-striped table-bordered">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.phone_number %></td>
        <td><%= order.address %></td>
        <td><%= order.quantity %></td>
        <td><%= link_to 'Show', food_item_order_path(id: order.id), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', food_item_order_path(id: order.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
</html>