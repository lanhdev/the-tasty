<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <img class="card-img-top" src=<%= @food_item.image_url %> alt=<%= @food_item.name %> >
      <div class="card-block">
        <%= link_to 'Edit', edit_food_item_path(@food_item), class: 'btn btn-warning' %>
        <%= link_to 'Back', menu_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= @food_item.name %></h4>
        <div class="star-rating" data-score= <%= @avg_rating %> ></div>
        <p><%= @food_item.description %></p>
        <p><%= number_to_currency(@food_item.price, precision: 0, unit: "VND", delimiter: ",", format: "%n %u") %></p>
        <p><%= number_to_human(@food_item.hit_count) %></p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <h2 class="card-header">Review</h2>
      <%= render @food_item.reviews %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <%= render 'reviews/form' %>
    </div>
  </div>
</div>
</body>
</html>
