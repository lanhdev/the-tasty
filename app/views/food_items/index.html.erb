<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<h1 style="color: #FFFFFF;">Food Items</h1>
<table class="table table-inverse table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Section</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.name %></td>
        <td><%= food_item.description %></td>
        <td><%= food_item.price %></td>
        <td><%= food_item.section %></td>
        <td><%= food_item.image_url %></td>
        <td><%= link_to 'Show', food_item, class: 'btn btn-info' %> </td>
        <td><%= link_to 'Edit', edit_food_item_path(food_item), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', food_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Food Item', new_food_item_path, class: 'btn btn-primary' %>
</body>
</html>

