<h2 class="card-header">Add a review</h2>
<div class="card-block">
  <%= form_for([@food_item, @food_item.reviews.build]) do |f| %>
    <div id='star-rating'></div>
    <br><div class="field">
      <%= f.text_field :reviewer, class: 'form-control', placeholder: 'Name' %> 
    </div>
    <br><div class="field">
      <%= f.text_field :comment, class: 'form-control', placeholder: 'Comment' %> 
    </div>
    <br><div class="float-xl-right">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
  
  $('#star-rating').raty({
    path: '/assets',
    scoreName: 'review[rating]'
  });
</script>
