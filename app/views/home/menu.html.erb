<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <div>
    <h1>Menu</h1>
  </div>
  <div class="btn-group">
    <% @sections.each do |section| %>
      <%= link_to section.name, menu_path(section_id: section.id), class: "btn #{params[:section_id] == section.id.to_s ? 'btn-primary' : 'btn-secondary'}" %>
    <% end %> 
  </div>
  <div>
    <br><% if @current_section %>
      <table class="table table-striped table-bordered">
        <thead class="table-inverse">
          <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
          <% @current_section.food_items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= number_to_currency(item.price, precision: 0, unit: "VND", delimiter: ",", format: "%n %u") %></td>
              <td><%= image_tag(item.image_url_or_default, height: '135', width: '240',alt: "#{item.name}") %></td>
            </tr>
          <% end %> 
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-warning">Please select a section</div>
    <% end %>
  </div>
</body>
</html>