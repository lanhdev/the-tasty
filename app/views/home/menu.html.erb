<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <form class="form-inline my-2 my-lg-0">
    <%= form_tag menu_path, method: 'get' do %>
    <%= text_field_tag :search, params[:search], class: 'form-control mr-sm-2', placeholder: 'Search' %>
    <%= submit_tag 'Search', class: 'btn btn-outline-success my-2 my-sm-0'%>
    <% end %>
  </form>
  <br><div class="btn-group">
    <% @sections.each do |section| %>
      <%= link_to section.name, menu_path(section_id: section.id), class: "btn #{params[:section_id] == section.id.to_s ? 'btn-primary' : 'btn-secondary'}" %>
    <% end %>
    <%= form_tag nil, method: 'get' do %>
      <%= hidden_field_tag :section, params[:section] %>
      <div class="form-inline">
        <%= select_tag :sort, options_for_select([['Name','name'], ['Highest price','desc'], ['Lowest price','asc']]), class: 'form-control' %>
        <%= submit_tag 'Sort', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div>
    <br>
    <table class="table table-striped table-bordered">
      <thead class="table-inverse">
        <tr>
          <th>Item</th>
          <th>Description</th>
          <th>Price</th>
          <th>Image</th>
          <th>Order</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% if @items %>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.description %></td>
              <td><%= number_to_currency(item.price, precision: 0, unit: "VND", delimiter: ",", format: "%n %u") %></td>
              <td><%= image_tag(item.image_url_or_default, height: '135', width: '240', alt: "#{item.name}") %></td>
              <td><%= link_to 'Add to order', new_food_item_order_path(food_item_id: item.id), class: 'btn btn-success' %></td>
              <td><%= link_to 'Show', food_item_path(item), class: 'btn btn-info'%></td>
              <td><%= link_to 'Edit', edit_food_item_path(item), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Destroy', food_item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %> 
        <% end %>
      </tbody>
    </table>
  </div>
</body>
</html>
